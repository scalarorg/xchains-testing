{
  "name": "xchains-testing-1",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run src/server.ts",
    "build": "bun run build:next && bun run build:server",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "sendBTC": "node -r dotenv/config --env-file=.env.local --import tsx src/example/sendBTC.ts",
    "bondingTxExp": "bun --bun --env-file=.env.local run src/example/bondingTxExp.ts",
    "unbondingServiceTxExp": "bun --bun --env-file=.env.local run src/example/unbondingServiceTxExp.ts",
    "unbondingServiceTxExp02": "bun --bun --env-file=.env.local run src/example/unbondingServiceTxExp02.ts",
    "fundingExp": "node -r dotenv/config --env-file=.env.local --import tsx src/example/fundingExp.ts",
    "fundingAccExp": "node -r dotenv/config --env-file=.env.local --import tsx src/example/fundingAccExp.ts",
    "stakingExp": "node -r dotenv/config --env-file=.env.local --import tsx src/example/stakingExp.ts",
    "unstakingExp": "node -r dotenv/config --env-file=.env.local --import tsx src/example/unstakingExp.ts",
    "returnAllFundsExp": "node -r dotenv/config --env-file=.env.local --import tsx src/example/returnAllFundsExp.ts",
    "genBtcAccountExample": "node -r dotenv/config --env-file=.env.local --import tsx src/example/genBtcAccountExample.ts",
    "importBtcAddressExample": "node -r dotenv/config --env-file=.env.local --import tsx src/example/importBtcAddressExample.ts"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "@mempool/mempool.js": "^2.3.0",
    "@prisma/client": "^5.20.0",
    "@scalar-lab/bitcoin-vault": "^0.0.14",
    "@types/node-cron": "^3.0.11",
    "axios": "0.24.0",
    "bitcoin-core-ts": "^3.0.3",
    "bitcoinjs-lib": "^7.0.0-rc.0",
    "cronstrue": "^2.51.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "ecpair": "^2.1.0",
    "electrum-client": "^0.0.6",
    "ethers": "^6.13.4",
    "next": "14.2.15",
    "node-cron": "^3.0.3",
    "prisma": "^5.20.0",
    "react": "^18",
    "react-dom": "^18",
    "tiny-secp256k1": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5"
  }
}
